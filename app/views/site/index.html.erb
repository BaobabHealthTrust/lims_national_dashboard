<div id="admin" style="width: 100%; height: 92vh;">
  <div class="container-fluid text-xs-center" style="border-bottom: 1px solid black;border-top: 2px solid darkred;background: #d3d3d3; margin-bottom: 15px;">
    <h4>Admin Setup</h4>
  </div>
<div class="row" style="width: 100%;overflow: auto !important;">
  <div class="col-lg-2" style="margin-left: 10px; width: 15%;">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <div class="btn-group-vertical" style="width: 95%;margin-left: auto !important;margin-right: auto !important;">
          <button onmousedown="swap_partials('add')" class="btn btn-default">Add Site</button>
          <button onmousedown="swap_partials('edit')" class="btn btn-default">Edit Site</button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-9" style="width: 83%;height: 100%;">
    <div id="addSite">
      <%= render "add_site" %>
    </div>
    <div id="editSite" style="display: none;">
      <%= render "edit_site" %>
    </div>
  </div>
</div>
</div>
<script type="text/javascript">
  <!--
  var task = "add"
  function swap_partials(type)
  {
      switch (type){
          case "add":
              document.getElementById("addSite").style.display = "block"
              document.getElementById("editSite").style.display = "none"
              task = "add"
              break;
          case "edit":
              document.getElementById("addSite").style.display = "none"
              document.getElementById("editSite").style.display = "block"
              task = "edit"
              break
      }

  }
  //-->
</script>